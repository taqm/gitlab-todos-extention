{
  "manifest_version": 2,
  "name": "gitlab-todos",
  "short_name": "Todos",
  "description": "gitlab notifications",
  "version": "1.3.0",
  "browser_action": {
    "default_popup": "src/popup/popup.html"
  },
  "options_page" : "src/background/options.html",
  "background": {
    "scripts": ["src/jquery-3.1.1.min.js", "src/Todo.js", "src/background/background.js"]
  },
  "permissions": [
    "notifications"
  ],
  "icons": {
    "16": "icons/icon-16.png",
    "48": "icons/icon-48.png",
    "128": "icons/icon-128.png"
  }
}
